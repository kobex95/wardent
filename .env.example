# Supabase 配置
# 从 Supabase Dashboard -> Settings -> API 获取
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# JWT 配置
# 使用强随机字符串生成 (例如: openssl rand -base64 64)
JWT_SECRET=your-very-long-random-jwt-secret-minimum-32-characters
JWT_REFRESH_SECRET=your-very-long-random-refresh-secret-minimum-32-characters

# 允许的邮箱列表 (逗号分隔，支持通配符)
ALLOWED_EMAILS=user@example.com,admin@domain.com,*@company.com

# 应用环境
APP_ENV=development
LOG_LEVEL=debug

# CORS 配置 (生产环境建议指定具体域名)
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://your-domain.com

# 数据库连接配置
DB_POOL_SIZE=5
DB_CONNECTION_TIMEOUT=10s

# 加密配置
PBKDF2_ITERATIONS=100000
ENCRYPTION_KEY_SIZE=256

# 缓存配置
ENABLE_CACHE=true
CACHE_TTL=300

# 安全配置
RATE_LIMIT_PER_MINUTE=60
SESSION_EXPIRE_HOURS=24
